<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout
    android:id="@+id/navigation_drawer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.MainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_coordinator_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        >

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar_layout"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:contentScrim="@color/color_primary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_image_size_256"
                    android:fitsSystemWindows="true">

                    <android.support.v7.widget.AppCompatImageView
                        android:id="@+id/user_photo_img"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/profile_image_size_256"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user_photo"
                        />
                    <RelativeLayout
                        android:id="@+id/profile_placeholder"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/grey_background"
                        android:visibility="gone"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_change_image"
                            android:textColor="@color/white"
                            android:fontFamily="sans-serif-medium"
                            android:layout_centerHorizontal="true"
                            android:layout_above="@+id/add_photo"
                            android:layout_marginBottom="@dimen/spacing_small_8"/>
                        <ImageView
                            android:id="@+id/add_photo"
                            android:layout_width="@dimen/placeholder_photo_size_90"
                            android:layout_height="@dimen/placeholder_photo_size_90"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_add_a_photo_black_24dp"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/spacing_large_56"
                            />
                    </RelativeLayout>
                </FrameLayout>


                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:theme="@style/AppTheme.PopupOverlay"
                    app:layout_collapseMode="pin"
                    />
            </android.support.design.widget.CollapsingToolbarLayout>

        </android.support.design.widget.AppBarLayout>

        <LinearLayout
            android:id="@+id/stats_panel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/user_info_height"
            android:background="@color/grey"
            android:orientation="horizontal"

            app:layout_behavior=".ui.behaviors.UserInfoBehavior"
            app:behavior_min_height="@dimen/user_info_behavior_min_height"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingTop="@dimen/spacing_small_8"
                android:paddingBottom="@dimen/spacing_small_8">

                <EditText
                    style="@style/topText.value"
                    android:text="@string/rating_count"

                    />

                <EditText
                    style="@style/topText.name"
                    android:text="@string/rating_label"
                    />
            </LinearLayout>

            <View
                android:layout_width="@dimen/line_width"
                android:layout_height="@dimen/line_height"
                android:layout_gravity="center"
                android:background="@color/white"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingTop="@dimen/spacing_small_8"
                android:paddingBottom="@dimen/spacing_small_8">

                <EditText
                    style="@style/topText.value"
                    android:text="@string/code_strings_count"
                    />

                <EditText
                    style="@style/topText.name"
                    android:text="@string/code_strings_label"
                    />
            </LinearLayout>

            <View
                android:layout_width="@dimen/line_width"
                android:layout_height="@dimen/line_height"
                android:layout_gravity="center"
                android:background="@color/white"/>

            <LinearLayout
                android:paddingTop="@dimen/spacing_small_8"
                android:paddingBottom="@dimen/spacing_small_8"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    style="@style/topText.value"
                    android:text="@string/projects_count"

                    />

                <EditText
                    style="@style/topText.name"
                    android:text="@string/projects_label"
                    />
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/user_profile_content"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit_24dp"
            app:layout_anchor="@id/appbar_layout"
            app:layout_anchorGravity="bottom|right"
            android:layout_marginRight="@dimen/fab_right_space"/>

    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>